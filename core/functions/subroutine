subroutine() {
   local subroutine_id=${1}
   routine_map="${routine_map}
· ${subroutine_id}"
   shift
   local subroutine_description="${@}"
   verbose && local vid="${subroutine_id} "
   if [[ -n ${subroutine_description} ]]
      then
      (>&2 echo "· ${vid}${subroutine_description}")
   elif verbose
      then
      (>&2 echo "· ${vid}")
   fi
}
