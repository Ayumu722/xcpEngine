#!/usr/bin/env bash

###################################################################
#  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  ☭  #
###################################################################

###################################################################
# Apply transforms to warp an image into a target space.
###################################################################
map=${1}
source=${2}
target=${3}
[[ -n ${4} ]] && interpolation=${4}

case ${map} in
nat2native)
   nat2native \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
str2native)
   str2native \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
std2native)
   std2native \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
nat2structural)
   nat2structural \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
str2structural)
   str2structural \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
std2structural)
   std2structural \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
nat2standard)
   nat2standard \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
str2standard)
   str2standard \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
std2standard)
   std2standard \
   ${source} \
   ${target} \
   ${interpolation}
   ;;
esac
